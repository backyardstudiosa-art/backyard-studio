  <script>
  (function () {
    // Change this per note
    const noteKey = "backyardstudio-quiet-note-004";

    // Once per day per device
    const today = new Date().toISOString().slice(0, 10); // YYYY-MM-DD
    const localKey = `${noteKey}-lastCounted`;

    const shouldCount = localStorage.getItem(localKey) !== today;

    const endpoint = shouldCount
      ? `https://api.countapi.xyz/hit/${encodeURIComponent(noteKey)}/views`
      : `https://api.countapi.xyz/get/${encodeURIComponent(noteKey)}/views`;

    fetch(endpoint)
      .then(r => r.json())
      .then(data => {
        const el = document.getElementById("views");
        if (el) el.textContent = data.value;

        if (shouldCount) {
          localStorage.setItem(localKey, today);
        }
      })
      .catch(() => {
        const el = document.getElementById("views");
        if (el) el.textContent = "—";
      });
  })();
</script>
  
